<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TodoApp{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
			<div class="headear">
			<h2 style="font-style: 'Hervetica';">ToDo List</h2>
			</div>
				<form method="POST" action="{{path('task_update')}}">
				<input type="text" name="title" class="task_input">
				<button type="submit" name="submit" id="add_btn" class="add_btn">Aktualizuj</button>
				</form>
		<ul>
			{% for task in tasks %}
				<li>
					<span contenteditable="true" class="task-list-item">{{ task.title }}</span> 
				</li>
				
			{% endfor %}
		</ul>
        <a onclick="return confirm ('Czy chcesz przerwać edycje?')" href="{{path('app_to_do_list')}}"><span>Cofnij</span></a>
		
		{% endblock %}
    </body>
</html>
